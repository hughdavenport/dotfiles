! Turn on dynamic colours so we can get solarized
URxvt.dynamicColors: on
! Do not waste paper by accidental keypresses
URxvt.print-pipe: "cat > /dev/null"
! We use tmux, so do not show scroll bar or save history
URxvt.scrollBar: false
URxvt.saveLines: 0
! Nice to be able to scroll in tmux, so use the secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 1
URxvt.secondaryWheel: 1
! Just incase we have it compiled in, disable it
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.keysym.C-equal: font-size:increase
URxvt.keysym.C-plus:  font-size:increase
URxvt.keysym.C-minus: font-size:decrease
URxvt.keysym.C-0:     font-size:reset

URxvt.keysym.C-underscore: font-size:show

URxvt.font-size.step: 2

! This was on old laptop, had comment doesnot do well with accents so will test that
!URxvt*font: xft:Terminus:size=14
! Has really large spacing, not a fan
!URxvt*font: xft:Incosolata:size=10
! New one, looks nice from the start, not as crisp as terminus though, need to test with accents and stuff
URxvt*font: xft:Hack:size=10,xft:EmojiOne\ Color

! Font wise, I also had Emoji One Color, and Symbola installed
